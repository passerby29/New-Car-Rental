<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@android:color/transparent"
    android:elevation="0dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:background="@drawable/item_catalog_rv_item_background">

        <ImageView
            android:id="@+id/item_category_rv_iv"
            android:layout_width="118dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            android:scrollX="-64dp"
            app:layout_constraintBottom_toTopOf="@+id/item_category_rv_tv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_car_image" />

        <TextView
            android:id="@+id/item_category_rv_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/background_main"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/item_category_rv_tv2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Porsche Cayenne Turbo" />

        <TextView
            android:id="@+id/item_category_rv_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/background_main"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="₽48000/день" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>